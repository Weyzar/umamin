{
  "name": "@umamin/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./schema/*": {
      "types": "./src/schema/*.ts",
      "default": "./dist/schema/*.js"
    },
    "./db": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc && turso dev --db-file ./src/dev.db",
    "build": "tsc",
    "clean": "rm -rf ./node_modules .turbo .dist",
    "check-types": "tsc --noEmit",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:push": "pnpm drizzle-kit push",
    "db:studio": "pnpm drizzle-kit studio"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@umamin/tsconfig": "workspace:*",
    "drizzle-kit": "^0.21.2"
  },
  "dependencies": {
    "@libsql/client": "^0.6.2",
    "drizzle-orm": "^0.30.10"
  }
}
