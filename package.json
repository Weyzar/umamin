{
  "name": "umamin",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:push": "pnpm --filter @umamin/db db:push",
    "db:migrate": "pnpm --filter @umamin/db db:migrate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "pnpm --filter @umamin/ui ui:add"
  },
  "devDependencies": {
    "@umamin/eslint-config": "workspace:*",
    "@umamin/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
