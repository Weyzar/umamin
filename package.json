{
  "name": "umamin",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=!./apps/social",
    "dev:social": "turbo run dev --filter=!./apps/web",
    "build:web": "turbo run build --filter=!./apps/social",
    "build:social": "turbo run build --filter=!./apps/web",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:push": "pnpm --filter @umamin/server db:push",
    "db:generate": "pnpm --filter @umamin/server db:generate",
    "db:migrate": "pnpm --filter @umamin/server db:migrate",
    "db:studio": "pnpm --filter @umamin/server db:studio",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "pnpm --filter @umamin/ui ui:add"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^1.13.3"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=20"
  }
}
